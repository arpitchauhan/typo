<% @page_heading = _('New article') %>

<%= render "admin/shared/edit", { :form_type => "article", :form_action => { :action => "new", :id => @article.id , :class => ('autosave')} } %>

<% if current_user.admin? %>

<div class=''>
    <h4>Merge Articles</h4>
    
    <form action="/admin/content/merge/<%= @article.id%>" method="post">
      <input type="text" name="merge_with" />
      <input type="submit" value="Merge" id="merge" />
      
    </form>
</div>

<% end %>